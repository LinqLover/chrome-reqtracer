{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "watch"
      ],
      "options": {
        "env": {
          "FORCE_COLOR": "0"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(?<file>[^\\s].*?):(?<line>\\d+):(?<column>\\d+):\\s+(?<severity>ERROR|Error|WARNING|Warning):\\s+(?<message>.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": false,
          "beginsPattern": "\\[nodemon\\]\\s*starting.*$",
          "endsPattern": "\\s*\\[(nodemon|vite)\\]\\s*(app crashed|clean exit|built in|Build failed).*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false
      }
    },
    // playwright
    {
      "label": "npm: test",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
    }
  ]
}
